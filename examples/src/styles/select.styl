.select-box
  position relative
  display inline-block
  overflow hidden
  float left
  width 50%

  cursor pointer

  background alt-bg-color
  color      alt-txt-color

  box-shadow 0 1px 2px #000

  border-radius 2px

  .fa
    position absolute
    right 10px
    font-size 16px
    top 50%
    margin-top -8px

  select
    color inherit

    font-size   16px
    font-family main-font-family

    position relative
    z-index 1
    display block
    width 150%
    -webkit-appearance none
    -moz-appearance    none
    appearance         none
    border             none
    -webkit-border-radius 0
    border-radius         0
    background-color transparent
    padding 7px 26px 7px 12px
    height auto
    margin 0
    &:focus
      outline none
