.switch
  prevent-select()
  & + label
    margin-left 10px
    vertical-align super
    cursor pointer

  input
    position absolute
    margin-left -9999px
    visibility hidden

  label
    outline none
    position relative
    display inline-block
    width 36px
    height 18px
    border-radius 18px
    cursor pointer
    background alt-bg-color
    &:after
      transition transform 200ms
      content ' '
      display inline-block
      position absolute
      transform translate3d(2px, 2px, 0)
      width  14px
      height 14px
      border-radius 7px
      background lighten(main-bg-color, 10)

  input:checked + label
    &:after
      background lighten(main-bg-color, 25)
      transform translate3d(20px, 2px, 0)
